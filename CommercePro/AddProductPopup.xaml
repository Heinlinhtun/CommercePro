<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup
    x:Class="CommercePro.AddProductPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
    CanBeDismissedByTappingOutsideOfPopup="False"
    Size="300, 230">
    <VerticalStackLayout Background="White">
        <Label
            Margin="10"
            HorizontalOptions="CenterAndExpand"
            Text="Add New Product"
            VerticalOptions="Center" />
        <Entry x:Name="TxtName" Placeholder="Name" />
        <Picker x:Name="PkrCat" Title="Category" />
        <Picker x:Name="PkrUnit" Title="Unit" />
        <HorizontalStackLayout FlowDirection="RightToLeft">
            <Button
                x:Name="BtnSave"
                Margin="10"
                Clicked="BtnSave_Clicked"
                Text="Save"
                WidthRequest="100" />
            <Button
                x:Name="BtnClose"
                Margin="10"
                Clicked="BtnClose_Clicked"
                Text="Close"
                WidthRequest="100" />

        </HorizontalStackLayout>

    </VerticalStackLayout>
</mct:Popup>